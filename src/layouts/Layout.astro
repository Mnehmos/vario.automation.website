---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Custom automation systems and AI agents for small businesses. Based in Safford, Arizona." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Vario Automation</title>
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-stone-50 text-stone-800 antialiased">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-stone-50/90 backdrop-blur-sm border-b border-stone-200">
      <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/vario-automation/" class="font-display font-bold text-xl text-stone-900 hover:text-copper transition-colors">
          vario<span class="text-copper">.automation</span>
        </a>
        <div class="hidden md:flex items-center gap-8">
          <a href="/vario-automation/services" class="text-stone-600 hover:text-stone-900 transition-colors">Services</a>
          <a href="/vario-automation/demo" class="text-copper hover:text-copper-light transition-colors font-medium">Demo</a>
          <a href="/vario-automation/about" class="text-stone-600 hover:text-stone-900 transition-colors">About</a>
          <a href="/vario-automation/contact" class="text-stone-600 hover:text-stone-900 transition-colors">Contact</a>
        </div>
        <a href="/vario-automation/contact" class="hidden md:inline-flex items-center gap-2 bg-stone-900 text-stone-50 px-4 py-2 rounded-lg font-medium hover:bg-stone-800 transition-colors">
          Book a Call
        </a>
        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-stone-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-stone-200 bg-stone-50">
        <div class="px-6 py-4 space-y-4">
          <a href="/vario-automation/services" class="block text-stone-600 hover:text-stone-900">Services</a>
          <a href="/vario-automation/demo" class="block text-copper hover:text-copper-light font-medium">Demo</a>
          <a href="/vario-automation/about" class="block text-stone-600 hover:text-stone-900">About</a>
          <a href="/vario-automation/contact" class="block text-stone-600 hover:text-stone-900">Contact</a>
          <a href="/vario-automation/contact" class="block bg-stone-900 text-stone-50 px-4 py-2 rounded-lg font-medium text-center">Book a Call</a>
        </div>
      </div>
    </nav>
    
    <main class="pt-20">
      <slot />
    </main>
    
    <footer class="bg-stone-900 text-stone-300 py-16 mt-24">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-12">
          <div class="md:col-span-2">
            <span class="font-display font-bold text-2xl text-stone-50">vario<span class="text-copper">.automation</span></span>
            <p class="mt-4 text-stone-400 max-w-md">
              Automation systems and AI agents that reduce manual work and keep teams consistent. Based in Safford, Arizona—serving Graham County and remote teams everywhere.
            </p>
          </div>
          <div>
            <h4 class="font-semibold text-stone-50 mb-4">Services</h4>
            <ul class="space-y-2 text-stone-400">
              <li><a href="/vario-automation/services#automation" class="hover:text-stone-200 transition-colors">Workflow Automation</a></li>
              <li><a href="/vario-automation/services#agents" class="hover:text-stone-200 transition-colors">AI Agents</a></li>
              <li><a href="/vario-automation/services#integrations" class="hover:text-stone-200 transition-colors">Integrations</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-stone-50 mb-4">Connect</h4>
            <ul class="space-y-2 text-stone-400">
              <li><a href="/vario-automation/contact" class="hover:text-stone-200 transition-colors">Contact</a></li>
              <li><a href="https://github.com/Mnehmos" class="hover:text-stone-200 transition-colors">GitHub</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-12 pt-8 border-t border-stone-800 text-stone-500 text-sm">
          <p>© 2024 Vario Automation. Safford, Arizona.</p>
        </div>
      </div>
    </footer>
    
    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  
  :root {
    --copper: #B87333;
    --copper-light: #D4956A;
  }
  
  body {
    font-family: 'Inter', sans-serif;
  }
  
  .font-display {
    font-family: 'Space Grotesk', sans-serif;
  }
  
  .text-copper {
    color: var(--copper);
  }
  
  .bg-copper {
    background-color: var(--copper);
  }
  
  .border-copper {
    border-color: var(--copper);
  }
  
  .hover\:text-copper:hover {
    color: var(--copper);
  }
  
  .hover\:bg-copper:hover {
    background-color: var(--copper);
  }
  
  .focus\:ring-copper:focus {
    --tw-ring-color: var(--copper);
  }
</style>
