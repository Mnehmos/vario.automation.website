---
import OrbitAnimation from "../components/OrbitAnimation";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Advanced AI engineering and custom automation systems. Specializing in autonomous multi-agent frameworks, RAG systems, and business process automation. Based in Safford, Arizona.",
} = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Vario Automation</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Schema.org Markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Vario Automation",
        "image": "https://vario.automation/logo.png",
        "description": "Advanced AI engineering and custom automation systems. Specializing in autonomous multi-agent frameworks, RAG systems, and business process automation.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Safford",
          "addressRegion": "AZ",
          "addressCountry": "US"
        },
        "url": "https://vario.automation",
        "priceRange": "$$$"
      }
    </script>

    <!-- Theme Script (runs before paint to prevent flash) -->
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "dark"; // Default to dark
      })();
      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
      window.localStorage.setItem("theme", theme);
    </script>
  </head>
  <body
    class="bg-stone-50 text-stone-800 dark:bg-stone-950 dark:text-stone-100 antialiased transition-colors duration-300"
  >
    <OrbitAnimation client:idle />

    <!-- Navigation -->
    <nav
      class="fixed top-0 left-0 right-0 z-50 bg-stone-50/60 dark:bg-stone-950/60 backdrop-blur-md border-b border-stone-200/50 dark:border-stone-800/50 transition-colors duration-300"
    >
      <div
        class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between"
      >
        <a
          href={base}
          class="flex items-center gap-3 font-display font-bold text-xl text-stone-900 dark:text-stone-100 hover:text-copper transition-colors group"
        >
          <svg
            class="w-8 h-8 header-logo"
            viewBox="0 0 32 32"
            xmlns="http://www.w3.org/2000/svg"
          >
            <defs>
              <linearGradient
                id="headerCopperGrad"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#D4956A"></stop>
                <stop offset="100%" style="stop-color:#B87333"></stop>
              </linearGradient>
              <filter id="headerGlow">
                <feGaussianBlur stdDeviation="0.5" result="coloredBlur"
                ></feGaussianBlur>
                <feMerge>
                  <feMergeNode in="coloredBlur"></feMergeNode>
                  <feMergeNode in="SourceGraphic"></feMergeNode>
                </feMerge>
              </filter>
            </defs>
            <rect width="32" height="32" rx="6" fill="#0C0A09"></rect>
            <!-- Gear teeth outer -->
            <g class="logo-gear" transform="translate(16,16)">
              <path
                d="M0,-10 L2,-10 L2.5,-7 L4,-7.5 L5.5,-9.5 L7,-8 L5.5,-6 L6.5,-4.5 L9.5,-5 L10,-3 L7.5,-2 L7.5,0 L10,0 L10,2 L7.5,2 L7.5,4 L9.5,5 L9,7 L6.5,5.5 L5,7 L6.5,9 L5,10 L3.5,7.5 L2,8 L2,10 L0,10 L0,7.5 L-2,8 L-2.5,10 L-4.5,9.5 L-3.5,7 L-5.5,6 L-7,8 L-8.5,6.5 L-6.5,4.5 L-7.5,2.5 L-10,3 L-10,0 L-7.5,0 L-7.5,-2 L-10,-2.5 L-9.5,-4.5 L-6.5,-4 L-5.5,-6 L-7,-8 L-5,-9.5 L-3.5,-7 L-2,-7.5 L-2,-10 Z"
                fill="url(#headerCopperGrad)"
                class="logo-gear-outer"></path>
            </g>
            <!-- Inner circle -->
            <circle cx="16" cy="16" r="4" fill="#0C0A09" class="logo-gear-inner"
            ></circle>
            <!-- Center dot -->
            <circle
              cx="16"
              cy="16"
              r="2"
              fill="#FCD34D"
              opacity="0.9"
              filter="url(#headerGlow)"
              class="logo-center"></circle>
            <!-- Connection dots -->
            <circle
              cx="6"
              cy="6"
              r="2"
              fill="url(#headerCopperGrad)"
              opacity="0.7"
              class="logo-node logo-node-1"></circle>
            <circle
              cx="26"
              cy="6"
              r="2"
              fill="url(#headerCopperGrad)"
              opacity="0.7"
              class="logo-node logo-node-2"></circle>
            <circle
              cx="26"
              cy="26"
              r="2"
              fill="url(#headerCopperGrad)"
              opacity="0.7"
              class="logo-node logo-node-3"></circle>
          </svg>
          <span>vario<span class="text-copper">.automation</span></span>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-8">
          <a
            href={`${base}services`}
            class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors"
            >Services</a
          >
          <a
            href={`${base}demo`}
            class="text-copper hover:text-copper-light transition-colors font-medium"
            >Demo</a
          >
          <a
            href={`${base}about`}
            class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors"
            >About</a
          >
          <a
            href={`${base}contact`}
            class="text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors"
            >Contact</a
          >

          <!-- Theme Toggle -->
          <button
            id="theme-toggle"
            class="pointer-events-auto relative z-50 text-stone-500 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors focus:outline-none"
            aria-label="Toggle Dark Mode"
          >
            <!-- Sun Icon (Hidden in Dark) -->
            <svg
              class="w-5 h-5 hidden dark:block"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
            <!-- Moon Icon (Hidden in Light) -->
            <svg
              class="w-5 h-5 block dark:hidden"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
              ></path>
            </svg>
          </button>

          <a
            href={`${base}contact`}
            class="hidden md:inline-flex items-center gap-2 bg-stone-900 dark:bg-stone-100 text-stone-50 dark:text-stone-900 px-4 py-2 rounded-lg font-medium hover:bg-stone-800 dark:hover:bg-stone-200 transition-colors"
          >
            Book a Call
          </a>
        </div>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-stone-600 dark:text-stone-400"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile menu -->
      <div
        id="mobile-menu"
        class="hidden md:hidden border-t border-stone-200 dark:border-stone-800 bg-stone-50 dark:bg-stone-950"
      >
        <div class="px-6 py-4 space-y-4">
          <a
            href={`${base}services`}
            class="block text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100"
            >Services</a
          >
          <a
            href={`${base}demo`}
            class="block text-copper hover:text-copper-light font-medium"
            >Demo</a
          >
          <a
            href={`${base}about`}
            class="block text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100"
            >About</a
          >
          <a
            href={`${base}contact`}
            class="block text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100"
            >Contact</a
          >

          <!-- Mobile Theme Toggle -->
          <button
            id="mobile-theme-toggle"
            class="flex items-center gap-2 text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 w-full"
          >
            <span class="dark:hidden">Switch to Dark Mode</span>
            <span class="hidden dark:block">Switch to Light Mode</span>
          </button>

          <a
            href={`${base}contact`}
            class="block bg-stone-900 dark:bg-stone-100 text-stone-50 dark:text-stone-900 px-4 py-2 rounded-lg font-medium text-center"
            >Book a Call</a
          >
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-stone-900 text-stone-300 py-16 mt-24">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-12">
          <div class="md:col-span-2">
            <span class="font-display font-bold text-2xl text-stone-50"
              >vario<span class="text-copper">.automation</span></span
            >
            <p class="mt-4 text-stone-400 max-w-md">
              Automation systems and AI agents that reduce manual work and keep
              teams consistent. Based in Safford, Arizona‚Äîserving Graham County
              and remote teams everywhere.
            </p>
            <p class="mt-4 text-stone-500 text-sm">üìç Safford, Arizona</p>
          </div>
          <div>
            <h4 class="font-semibold text-copper-light mb-4">Services</h4>
            <ul class="space-y-2 text-stone-400">
              <li>
                <a
                  href={`${base}services#automation`}
                  class="hover:text-stone-200 transition-colors"
                  >Workflow Automation</a>
              </li>
              <li>
                <a
                  href={`${base}services#agents`}
                  class="hover:text-stone-200 transition-colors">AI Agents</a>
              </li>
              <li>
                <a
                  href={`${base}services#integrations`}
                  class="hover:text-stone-200 transition-colors"
                  >Integrations</a>
              </li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-copper-light mb-4">Connect</h4>
            <ul class="space-y-2 text-stone-400">
              <li>
                <a
                  href={`${base}contact`}
                  class="hover:text-stone-200 transition-colors">Contact</a>
              </li>
              <li>
                <a
                  href="https://github.com/Mnehmos"
                  class="hover:text-stone-200 transition-colors">GitHub</a>
              </li>
            </ul>
          </div>
        </div>
        <div
          class="mt-12 pt-8 border-t border-stone-800 text-stone-500 text-sm"
        >
          <p>
            ¬© {new Date().getFullYear()} Vario Automation. Safford, Arizona.
          </p>
        </div>
      </div>
    </footer>

    <!-- Scripts -->
    <script>
      // Mobile Menu
      const menuBtn = document.getElementById("mobile-menu-btn");
      const mobileMenu = document.getElementById("mobile-menu");
      menuBtn?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
      });

      // Dark Mode Toggle Logic
      const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");
        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
      };

      const themeToggle = document.getElementById("theme-toggle");
      const mobileThemeToggle = document.getElementById("mobile-theme-toggle");

      themeToggle?.addEventListener("click", handleToggleClick);
      mobileThemeToggle?.addEventListener("click", handleToggleClick);
    </script>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
